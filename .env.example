# Example environment variables required by slice-api
# Copy to .env (local development) or add to Vercel/Docker environment.

# JWKS / Lens
LENS_API_URL=https://api.hey.xyz/graphql

# Database (Postgres)
DATABASE_URL=postgres://user:pass@host:5432/dbname

# Optional / tuning
JWKS_FETCH_TIMEOUT_MS=80000
JWT_CLOCK_TOLERANCE=60
REAL_HEY_API_URL=https://api.hey.xyz
SHARED_SECRET=your_shared_secret_if_used

# Blockchain Escrow (Ethereum/Polygon/BSC)
RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
ESCROW_CONTRACT_ADDRESS=0x...
ADMIN_PRIVATE_KEY=0x...
TOKEN_ADDRESS=0x...
